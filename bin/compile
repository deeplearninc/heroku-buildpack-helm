#!/bin/bash

indent() {
    sed -u 's/^/       /'
}

echo "-----> Found a .helm_url file"

if [ ! -s $1/.helm_url ]; then
    echo ".helm_url empty. Skipping." | indent
    exit 0
fi

cd $1

while read url; do
  if [ -n "$url" ]; then
    echo Vendoring $url | indent
    curl -L --silent $url > $1/bin/helm.tar.gz
    cd $1/bin && \
      tar -xzvf helm.tar.gz --strip 1 '*helm' && rm helm.tar.gz
  fi
done < .helm_url
